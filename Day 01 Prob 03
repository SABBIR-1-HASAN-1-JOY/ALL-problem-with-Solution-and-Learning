Problem link : https://codeforces.com/problemset/problem/1917/A

//PROBLEM CODE
#include <bits/stdc++.h>
using namespace std;
int main(){
  int t; 
  cin>>t;
  while(t--){
    int cnt=0,n,pos=0;
   cin>>n;
   int a[n];

   for(int i=0;i<n;i++){
    int p;
    cin>>p;
    if(p<0) cnt++;
    else if (p>0) pos++;
    a[i]=p;
   }
   if(pos==n){
       cout<<"1\n1 0\n";
   }
   else if(pos+cnt==n){
        if(cnt%2) cout<<"0\n";
        else{
         cout<<"1\n1 0\n";
        }
   }
   else cout<<"0\n";
  }
}
